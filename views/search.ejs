  <script>
    const phoneNumberInput = document.querySelector('input[name="phoneNumber"]');
    const fixedText = "569";

    phoneNumberInput.addEventListener('input', function() {
      if (!phoneNumberInput.value.startsWith(fixedText)) {
        phoneNumberInput.value = fixedText + phoneNumberInput.value;
      }
    });

    phoneNumberInput.addEventListener('keydown', function(event) {
      const key = event.key;
      const keyCode = event.keyCode;

      const cursorPosition = phoneNumberInput.selectionStart;
      if (key === 'Backspace' && cursorPosition <= fixedText.length) {
        event.preventDefault();
      }

      if (keyCode >= 48 && keyCode <= 57 || key === 'Backspace' || key === 'Delete' || keyCode == 38 || keyCode == 40 || keyCode == 37 || keyCode == 39) {
        return;
      } else {
        event.preventDefault();
      }
      
    });
  </script>
